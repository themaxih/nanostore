{% if adresse is defined and not adresse is null %}
    <div class="gender-group">
        <label>
            <input type="radio" class="radio-button" name="gender" value="0" {{ not adresse.gender ? 'checked' }} required>
            M.
        </label>

        <label>
            <input type="radio" class="radio-button" name="gender" value="1" {{ adresse.gender ? 'checked' }} required>
            Mme
        </label>
    </div>

    <label id="firstName">
        <input class="info-input" name="firstName"
               placeholder="Prénom"
               autocomplete="given-name"
               spellcheck="false"
               value="{{ adresse.firstName }}"
               required>
    </label>

    <label id="lastName">
        <input class="info-input" name="lastName"
               placeholder="Nom"
               autocomplete="family-name"
               spellcheck="false"
               value="{{ adresse.lastName }}"
               required>
    </label>

    <label id="phoneNumber">
        <input class="info-input" name="phoneNumber"
               type="tel"
               placeholder="Téléphone"
               autocomplete="tel-national"
               pattern="0[1-9]([0-9]{2}){4}|0[1-9]([ ]?[0-9]{2}){4}"
               minlength="10"
               maxlength="14"
               title="Un numéro de téléphone français doit être composé de 10 chiffres et commencer par 0. Exemple : 0123456789 ou 01 23 45 67 89."
               value="{{ adresse.phoneNumber }}"
               required>
    </label>

    <label id="address">
        <input class="info-input" name="address"
               placeholder="Adresse"
               autocomplete="address-line1"
               spellcheck="false"
               value="{{ adresse.addressLine }}"
               required>
    </label>

    <label id="postalCode">
        <input class="info-input" name="postalCode"
               placeholder="Code Postal"
               autocomplete="postal-code"
               inputmode="numerical"
               minlength="5"
               maxlength="5"
               value="{{ adresse.postalCode }}"
               required>
    </label>

    <label id="city">
        <input class="info-input" name="city"
               placeholder="Ville"
               spellcheck="false"
               value="{{ adresse.city }}"
               required>
    </label>

{% else %} {# Les champs non pré remplis avec l'adresse par défaut #}
